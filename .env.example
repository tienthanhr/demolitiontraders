# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=demolitiontraders
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME="Demolition Traders"
APP_URL=http://localhost/demolitiontraders
APP_ENV=development
APP_DEBUG=true

# Security
JWT_SECRET=your-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this

# IdealPOS API Configuration
IDEALPOS_API_URL=https://api.idealpos.com/v1
IDEALPOS_API_KEY=your-idealpos-api-key
IDEALPOS_STORE_ID=your-store-id
IDEALPOS_SYNC_ENABLED=true
IDEALPOS_SYNC_INTERVAL=300

# Email Configuration
# ==========================================
# For Microsoft Office 365 / Exchange:
#   SMTP_HOST=smtp.office365.com
#   SMTP_PORT=587
#   SMTP_SECURE=tls
#
# For Gmail:
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_SECURE=tls
#   Note: Use App Password if 2FA enabled
#
# For cPanel/Generic hosting:
#   SMTP_HOST=mail.yourdomain.com
#   SMTP_PORT=587 or 465
#   SMTP_SECURE=tls or ssl
# ==========================================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USER=your-email@company.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@company.com
SMTP_FROM_NAME=Demolition Traders

# Payment Gateway (Optional)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf
